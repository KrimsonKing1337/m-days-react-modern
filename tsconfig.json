{
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
  },
  "exclude": ["node_modules", "dist", "lib"],
  "include": ["./**/*"]
}
